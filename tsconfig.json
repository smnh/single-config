{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "lib": ["es2018"],
    "rootDir": "./src",
    "outDir": "./dist"
  }
}
